@model  Fendahl_Frm_Training_MVC.Models.Profile

@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter name" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", placeholder = "Enter age" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Course)
        @Html.TextBoxFor(m => m.Course, new { @class = "form-control", placeholder = "Enter Course" })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-2">Cancel</a>
}

